generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VoteResponse {
  YES
  MAYBE
  NO
}

enum AttendanceSource {
  VOTE
  MANUAL
}

enum ScheduleStatus {
  PENDING
  CONFIRMED
}

enum AccountingStatus {
  PENDING
  CONFIRMED
}

enum PaymentMethod {
  CASH
  PAYPAY
  TRANSFER
  OTHER
}

enum PaymentStatus {
  UNSUBMITTED
  PENDING
  APPROVED
}

model Event {
  id                       String           @id @default(cuid())
  publicId                 String           @unique
  name                     String
  memo                     String?
  shopSchedule             String?
  shopName                 String?
  shopUrl                  String?
  courseName               String?
  courseUrl                String?
  shopAddress              String?
  shopPrice                String?
  areaPrefCode             String?
  areaMunicipalityName     String?
  ownerUserId              String?
  ownerClientId            String?
  votingLocked             Boolean          @default(false)
  scheduleStatus           ScheduleStatus   @default(PENDING)
  confirmedCandidateDateId String?          @unique
  accountingStatus         AccountingStatus @default(PENDING)
  totalAmount              Int?
  perPersonAmount          Int?
  createdAt                DateTime         @default(now())
  updatedAt                DateTime         @updatedAt

  ownerUser             User?          @relation(fields: [ownerUserId], references: [id])
  candidateDates        CandidateDate[]
  votes                 Vote[]
  attendances           Attendance[]
  payments              Payment[]
  rounds                EventRound[]
  confirmedCandidateDate CandidateDate? @relation("ConfirmedDate", fields: [confirmedCandidateDateId], references: [id])

  @@index([ownerUserId])
}

model Municipality {
  id        String   @id @default(cuid())
  prefCode  String
  name      String
  municipalityCode String?
  nameKana  String?
  sortOrder Int?
  createdAt DateTime @default(now())

  @@index([prefCode, name])
  @@index([prefCode])
}

model CandidateDate {
  id        String   @id @default(cuid())
  eventId   String
  startsAt  DateTime
  createdAt DateTime @default(now())

  event            Event       @relation(fields: [eventId], references: [id])
  voteChoices      VoteChoice[]
  confirmedForEvent Event?     @relation("ConfirmedDate")

  @@index([eventId])
}

model Vote {
  id        String   @id @default(cuid())
  eventId   String
  name      String
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event   Event        @relation(fields: [eventId], references: [id])
  choices VoteChoice[]

  @@index([eventId])
}

model VoteChoice {
  id              String       @id @default(cuid())
  voteId          String
  candidateDateId String
  response        VoteResponse

  vote          Vote          @relation(fields: [voteId], references: [id], onDelete: Cascade)
  candidateDate CandidateDate @relation(fields: [candidateDateId], references: [id], onDelete: Cascade)

  @@unique([voteId, candidateDateId])
}

model EventRound {
  id               String           @id @default(cuid())
  eventId          String
  order            Int
  name             String
  accountingStatus AccountingStatus @default(PENDING)
  totalAmount      Int?
  perPersonAmount  Int?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  event       Event        @relation(fields: [eventId], references: [id])
  attendances Attendance[]
  payments    Payment[]

  @@unique([eventId, order])
  @@index([eventId])
}

model Attendance {
  id        String           @id @default(cuid())
  eventId   String
  roundId   String
  name      String
  isActual  Boolean          @default(false)
  source    AttendanceSource
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  event   Event      @relation(fields: [eventId], references: [id])
  round   EventRound @relation(fields: [roundId], references: [id])
  payment Payment?

  @@index([eventId])
  @@index([roundId])
}

model Payment {
  id           String        @id @default(cuid())
  eventId      String
  roundId      String
  attendanceId String        @unique
  amount       Int
  method       PaymentMethod?
  status       PaymentStatus @default(UNSUBMITTED)
  appliedAt    DateTime?
  approvedAt   DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  event      Event      @relation(fields: [eventId], references: [id])
  round      EventRound @relation(fields: [roundId], references: [id])
  attendance Attendance @relation(fields: [attendanceId], references: [id])

  @@index([eventId])
  @@index([roundId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  passwordHash  String?
  paypayId      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  events   Event[]
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
